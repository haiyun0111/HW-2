function setup() {
  createCanvas(400, 400);
}

function draw() {
  background(mouseX);
  noStroke();
  strokeCap(SQUARE);
  
  // Red square
    fill(255, 0, 0);
    rect(160, 0, 320, 320);
  // rect(mouseX, mouseY, 320, 320)
  
  // Blue square
    fill(0, 0, 225);
    rect(0, 320, 80, 80);
  
  // Yellow rectangle
  fill(255, 255, 0);
  rect(370, 360, 30, 40);
  
  fill(255, 0, 0);
    rect(0, 0, 80, 160);
  
  fill(255, 255, 0);
  rect(80, 200, 80, 200)
  
  fill('#fae');
  rect(160, 320, 210, 80)
  
  stroke(0);
  strokeWeight(13)
  line(80, 0, 80, 400);  //left
  line(0, 320, 400, 320);  //middle
  line(370, 320, 370, 400);  //right
  line(160, 0, 160, 400)
  strokeWeight(15)
  line(370, 360, 400, 360); //right
  strokeWeight(35)
  line(80, 200, 160, 200)
  
  strokeWeight(21)
  line(0, 160, 80, 160);
}
  
